{
  "name": "esri-leaflet",
  "description": "Leaflet plugins for consuming ArcGIS Online and ArcGIS Server services.",
  "version": "2.0.0-beta.6",
  "author": "Patrick Arlt <parlt@esri.com> (http://patrickarlt.com)",
  "bugs": {
    "url": "https://github.com/esri/esri-leaflet/issues"
  },
  "contributors": [
    "Patrick Arlt <parlt@esri.com> (http://patrickarlt.com)",
    "John Gravois <jgravois@esri.com> (http://johngravois.com)"
  ],
  "dependencies": {
    "leaflet": "1.0.0-beta.2"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "whitelist": [
            "es6.modules"
          ],
          "loose": [
            "es6.modules"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "assemble": "^0.4.37",
    "babelify": "^6.1.3",
    "chai": "2.3.0",
    "eslint": "^0.24.1",
    "esperanto": "^0.7.3",
    "gh-release": "^2.0.0",
    "grunt": "^0.4.2",
    "grunt-concurrent": "^0.5.0",
    "grunt-contrib-connect": "^0.4.1",
    "grunt-contrib-copy": "^0.5.0",
    "grunt-contrib-imagemin": "^0.9.4",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-gh-pages": "^0.8.1",
    "grunt-newer": "^0.7.0",
    "grunt-sass": "^1.0.0",
    "highlight.js": "^8.0.0",
    "http-server": "^0.8.5",
    "isparta": "^3.0.3",
    "istanbul": "gotwarlost/istanbul.git#source-map",
    "karma": "^0.12.16",
    "karma-chai-sinon": "^0.1.3",
    "karma-coverage": "douglasduteil/karma-coverage#next",
    "karma-mocha": "^0.1.0",
    "karma-mocha-reporter": "^0.2.5",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-sourcemap-loader": "^0.3.5",
    "load-grunt-tasks": "^0.4.0",
    "mkdirp": "^0.5.1",
    "phantomjs": "^1.9.17",
    "rollup": "^0.11.4",
    "semistandard": "^7.0.2",
    "sinon": "^1.11.1",
    "sinon-chai": "2.7.0",
    "snazzy": "^2.0.1",
    "uglify-js": "^2.4.23",
    "watch": "^0.16.0"
  },
  "homepage": "http://esri.github.io/esri-leaflet",
  "jsnext:main": "src/EsriLeaflet.js",
  "jspm": {
    "registry": "npm",
    "format": "es6"
  },
  "keywords": [
    "arcgis",
    "esri",
    "esri leaflet",
    "gis",
    "leaflet plugin",
    "mapping"
  ],
  "license": "Apache-2.0",
  "main": "src/EsriLeaflet.js",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "git@github.com:Esri/esri-leaflet.git"
  },
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "mkdirp dist",
    "build": "./scripts/build.js",
    "lint": "semistandard src/**/*.js | snazzy",
    "pretest": "npm run build",
    "test": "npm run lint && karma start",
    "release": "./scripts/release.sh",
    "serve": "watch 'npm run build' src & http-server -p 5678 -c-1 -o",
    "start": "grunt"
  }
}
